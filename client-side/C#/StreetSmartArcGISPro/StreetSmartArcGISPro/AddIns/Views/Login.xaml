             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:StreetSmartArcGISPro.AddIns.Views.Converters" 
             mc:Ignorable="d" 
             d:DesignHeight="300"
             d:DesignWidth="300">
